        <div class="row">
            <div class="col-md-12">
                <div class="services-items text-center services-carousel owl-carousel owl-theme">
                    <!-- Single Item -->
                    @foreach (var item in Model.Services)
                    {
                        if(item.IsHomePage){
                            <div class="item">
                                <div class="info">
                                    <h4>
                                        <a href="#">@item.Title</a>
