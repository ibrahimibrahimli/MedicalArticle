@model HomeViewModel
<!-- Start Banner
    ============================================= -->
<div style="" class="banner-area text-light gradient-bg standard auto-height">
    <!-- Fixed Shape -->
    <div class="fixed-shape" style="background-image: url(assets/img/shape-2.png);"></div>
    <!-- End Fixed Shape -->
    <div class="item">
        <div class="box-table">
            <div class="box-cell">
                <div class="container">
                    <div class="row">
                        <div class="content double-items">
                            @foreach (var item in Model.Slides)
                            {
                                <div class="col-md-6 info">
                                    <h1 data-animation="animated slideInRight">@item.Title</h1>
                                    <p data-animation="animated slideInUp">@item.Content</p>
                                </div>

                                <!-- Start thumb Form -->
                                <div class="col-md-6 thumb-box">
                                    <div class="thumb">
                                        <img src="@item.PhotoUrl" alt="Thumb">
                                    </div>
                                </div>
                            }
                            <!-- End thumb Form -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Banner -->
