<!-- Start top services
============================================= -->
<div class="top-services-area default-padding-bottom">
    <div class="services-tabs">
        <div class="container">
            <div class="row">
                <div class="col-md-10 col-md-offset-1">
                    <!-- Tab Nav -->
                    <!-- End Tab Nav -->
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-10 col-md-offset-1">
                <!-- Start Tab Content -->
                @foreach (var item in Model.ServiceAbout)
                {
                    <div class="tab-content">
                        <div id="tab1" class="tab-pane fade active in">
                            <div class="row item-flex center">
                                <div class="col-md-5 thumb">
                                    <img src="@item.PhotoUrl" alt="Thumb">
                                </div>
                                <div class="col-md-7 info">
                                    <h2>@item.Title</h2>
                                    <p>
                                        @item.Description
                                    </p>
                                    <ul>
                                        @foreach (var i in item.ServiceAboutItems)
                                        {
                                            <li>@i.Text</li>
                                        }
                                    </ul>
                                    <a class="btn circle btn-theme effect btn-md" href="#">Read More</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                <!-- End Tab Content -->
            </div>
        </div>
    </div>
</div>
<!-- End top services -->
<!-- Start Fun Factor
============================================= -->
<div class="fun-fact-area default-padding shadow light text-center bg-fixed text-light" style="background-image: url(assets/img/banner/2.jpg);">
    <div class="container">
        <div class="row" style="display:flex; justify-content:center;">
            @foreach (var item in Model.Facts)
            {
                <div class="col-md-3 col-sm-6 item">
                    <div class="fun-fact">
                       @item.IconUrl
                        <div class="timer" data-to="@item.Counter" data-speed="5000"></div>
                        <span class="medium">@item.Title</span>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<!-- End Fun Factor -->
