@model BlogViewModel

<div class="breadcrumb-area shadow dark bg-fixed text-light" style="background-image: url(assets/img/banner/8.jpg);">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h1>@_localization.getKey("Blog")</h1>
            </div>
            <div class="col-md-6 text-right">
            </div>
        </div>
    </div>
</div>
<!-- End Breadcrumb -->
<!-- Start Blog
============================================= -->
<div class="blog-area full-blog left-sidebar default-padding">
    <div class="container">
        <div class="row">
            <div class="blog-items">
                <div class="blog-content col-md-8">
                    @foreach (var item in Model.Blogs)
                    {
                        <!-- Single Item -->
                        <div class="single-item item">
                            <div class="thumb">
                                <a asp-route-id="@item.Id" asp-action="Details">
                                    <img src="@item.PhotoUrl" alt="Thumb">
                                    <div class="post-type">
                                    </div>
                                </a>
                            </div>
                            <div class="info">
                                <div class="meta">
                                    <ul>
                                        <li><a >@item.TeamboardName @item.TeamboardSurname</a></li>
                                        <li>@item.CreatedDate.ToString("dd.MM.yyyy")</li>
                                    </ul>
                                </div>
                                <h3>
                                    <a asp-route-id="@item.Id" asp-action="Details">@item.Title</a>
                                </h3>
                                <p>
                                    @(item.Text.Length > 200 ? item.Text.Substring(0,200) + "..." : item.Text);
                                </p>
                                <a class="btn btn-theme circle border btn-sm" asp-route-id="@item.Id" asp-action="Details">@_localization.getKey("ReadMore").Value <i class="fas fa-angle-right"></i></a>
                            </div>
                        </div>
                        <!-- End Single Item -->
                    }
                   
                </div>
                <!-- Start Sidebar -->
                <div class="sidebar col-md-4">
                    <aside>
                        <div class="sidebar-item recent-post">
                            <div class="title">
                                <h4>@_localization.getKey("RecentPost").Value</h4>
                            </div>
                            <ul>
                                @foreach (var item in Model.Blogs)
                                {
                                    <li>
                                        <div class="thumb">
                                            <a href="#">
                                                <img src="@item.PhotoUrl" alt="Thumb">
                                            </a>
                                        </div>
                                        <div class="info">
                                            <a href="#">@item.Title</a>
                                            <div class="meta-title">
                                                <span class="post-date">@item.CreatedDate.ToString("dd.MM.yyyy")</span> - By <a href="#">@(item.TeamboardName + " " + item.TeamboardSurname)</a>
                                            </div>
                                        </div>
                                    </li>
                                }
                            </ul>
                        </div>
                        <div class="sidebar-item social-sidebar">
                            <div class="title">
                                <h4>@_localization.getKey("FollowUs").Value</h4>
                            </div>
                            <div class="sidebar-info">
                                @foreach (var item in Model.Sosials)
                                {
                                    <ul>
                                        <li class="facebook">
                                            <a href="@item.FacebookUrl">
                                                <i class="fab fa-facebook-f"></i>
                                            </a>
                                        </li>
                                        <li class="twitter">
                                            <a href="@item.InstagramUrl">
                                                <i class="fab fa-facebook-f"></i>
                                            </a>
                                        </li>
                                        <li class="pinterest">
                                            <a href="#">
                                                <i class="fab fa-pinterest"></i>
                                            </a>
                                        </li>
                                        <li class="g-plus">
                                            <a href="#">
                                                <i class="fab fa-google-plus-g"></i>
                                            </a>
                                        </li>
                                    </ul>
                                    
                                }
                            </div>
                        </div>
                    </aside>
                </div>
                <!-- End Start Sidebar -->
            </div>
        </div>
    </div>
</div>
<!-- End Blog -->