@model HealtTipCreateDto

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Ad</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Surname" class="control-label">Soyad</label>
                <textarea asp-for="Surname" class="form-control" id="answer"></textarea>
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Header" class="control-label">Üst Mətn</label>
                <textarea asp-for="Header" class="form-control" id="answer"></textarea>
                <span asp-validation-for="Header" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Title" class="control-label">Başlıq</label>
                <textarea asp-for="Title" class="form-control" id="answer"></textarea>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label">Açıqlama</label>
                <textarea asp-for="Description" class="form-control" id="answer"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SubTitle" class="control-label">Alt başlıq</label>
                <textarea asp-for="SubTitle" class="form-control" id="answer"></textarea>
                <span asp-validation-for="SubTitle" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PhotoUrl" class="control-label">Şəkil</label>
                <input asp-for="PhotoUrl" name="PhotoUrl" class="form-control" type="file" />
                <span asp-validation-for="PhotoUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@DefaultConstantValues.ADD_MESSAGE" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@DefaultConstantValues.RETURN_TO_BACK</a>
</div>